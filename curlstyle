package finalproject;

import java.util.Scanner;

public class createit {

	public static void main(String[] args) {
		 String[] Types = {"Straighthair", "Wavyhair", "Curlyhair","Kinkyhair"};
			
			System.out.println("Welcome to Shea Curl!");
		    String message;

		    Scanner scan = new Scanner(System.in);
		    System.out.println("Enter your name: ");
		    message = scan.nextLine();
		   
		    Scanner input = new Scanner ( System.in);
		    System.out.print("Enter a type:"); 
			int hairtype = input.nextInt();
			
			switch ( hairtype) {
			case 1 : System.out.print( "Straighthair"); break ;
			case 2 : System.out.print("Wavyhair"); break ;
			case 3 : System.out.print("Curlyhair"); break ;
			case 4 : System.out.print("Kinkyhair"); break ;
			
	}

	}
}




                                                
